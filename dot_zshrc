# TODO: run neofetch on start

# aliases
source ~/.aliases

# setup cd alternative
eval "$(zoxide init zsh)"

# zsh vim mode
# NOTE: https://github.com/jeffreytse/zsh-vi-mode?tab=readme-ov-file#-usage
source $(brew --prefix)/opt/zsh-vi-mode/share/zsh-vi-mode/zsh-vi-mode.plugin.zsh

# zsh text suggestions
source $(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh

# node version manager
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# variables
export EDITOR=nvim

# fzf
# [ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# starship
eval "$(starship init zsh)"

# thefuck
eval $(thefuck --alias)

# bun
export PATH="$PATH:$HOME/.bun/bin"
[ -s "/Users/jacob-shuman/.bun/_bun" ] && source "/Users/jacob-shuman/.bun/_bun"

# pnpm
export PNPM_HOME="/Users/jacob-shuman/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

eval "$(/opt/homebrew/bin/brew shellenv)"
eval "$(rbenv init - --no-rehash zsh)"
