# chezmoi
alias ch='chezmoi'
alias cha='ch add'
alias chr='ch remove'
alias chd='cd ~/.local/share/chezmoi'
alias chg='chezmoi git'
alias chv='chd && ghv && cd -'
alias chn='ch edit --apply'

# sleep
alias sleepnow='sudo pmset sleepnow'

# quick restart
alias restart='sudo shutdown -r now'

# config
alias nzrc='ch edit --apply ~/.zshrc'
alias nza='ch edit --apply ~/.aliases && resource'
alias ncr='ch edit --apply ~/.cron'
alias nrc='ch edit --apply ~/.config/nvim/init.lua'
alias nwrc='ch edit --apply ~/.config/wezterm/wezterm.lua'
alias ngit='ch edit --apply ~/.gitconfig'

# git
alias gitc='git commit'
alias gits='git status'
alias gita='git add'
